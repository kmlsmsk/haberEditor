{
  "manifest_version": 3,
  "name": "Haber Asistanı",
  "version": "7.0",
  "description": "Yapay zeka destekli profesyonel haber yazma asistanı.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "clipboardRead"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}